<div class="row">
  <div class="centered-container">
    <div class="one-third column">
      <div class="cards">
        <%= form_for(resource, html: { class: 'u-full-width' }, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "u-full-width" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "u-full-width" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
