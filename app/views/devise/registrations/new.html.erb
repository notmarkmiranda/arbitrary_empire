<div class="row">
  <div class="centered-container">
    <div class="one-third column">
      <div class="cards">
        <%= form_for(resource, html: { class: 'u-full-width' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "u-full-width" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <div class="small"><%= @minimum_password_length %> characters minimum</div>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "u-full-width" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "u-full-width" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "u-full-width" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
